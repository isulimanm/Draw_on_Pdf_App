<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Responsive toolbar: scrollable in portrait, fully visible in landscape -->
    <HorizontalScrollView
        android:id="@+id/toolbarScroll"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fillViewport="true"
        android:scrollbars="none"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:id="@+id/toolbar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <Button
                android:id="@+id/btnOpen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Open PDF"/>

            <ToggleButton
                android:id="@+id/tbPen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textOn="Pen ON"
                android:textOff="Pen OFF"
                android:layout_marginStart="8dp"/>

            <Button
                android:id="@+id/btnUndo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Undo"
                android:layout_marginStart="8dp"/>

            <Button
                android:id="@+id/btnRedo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Redo"
                android:layout_marginStart="4dp"/>

            <Button
                android:id="@+id/btnRed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Red"
                android:layout_marginStart="8dp"/>

            <Button
                android:id="@+id/btnBlue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Blue"
                android:layout_marginStart="4dp"/>

            <SeekBar
                android:id="@+id/seekSize"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:max="60"
                android:progress="8"/>

            <Button
                android:id="@+id/btnSaveAs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Save As"
                android:layout_marginStart="8dp"/>
        </LinearLayout>
    </HorizontalScrollView>

    <!-- Thin indeterminate bar shown while merging -->
    <com.google.android.material.progressindicator.LinearProgressIndicator
        android:id="@+id/mergeProgress"
        style="@style/Widget.Material3.LinearProgressIndicator"
        android:layout_width="0dp"
        android:layout_height="4dp"
        android:visibility="gone"
        android:indeterminate="true"
        app:layout_constraintTop_toBottomOf="@id/toolbarScroll"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- PDF + ink overlay -->
    <FrameLayout
        android:id="@+id/pdfContainer"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/mergeProgress"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <com.github.barteksc.pdfviewer.PDFView
            android:id="@+id/pdfView"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <com.example.myapplication.InkOverlayView
            android:id="@+id/inkOverlay"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clickable="true"
            android:focusable="true"/>
    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
